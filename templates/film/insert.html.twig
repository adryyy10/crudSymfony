{% extends 'base.html.twig' %}

{% block title %}Insert Film{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <form action="{{ path('film') }}" method="POST">
                <div class="form-group">
                    <label for="title1">Title</label>
                    <input type="text" class="form-control" id="title1" name="title1" aria-describedby="title" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="sinopsis1">Sinopsis</label>
                    <input type="text" class="form-control" id="sinopsis1" name="sinopsis1" aria-describedby="sinopsis" placeholder="Enter sinopsis">
                </div>
                <button type="submit" class="btn btn-primary">Add new film</button>
            </form>
        </div>
    </div>

{% endblock %}